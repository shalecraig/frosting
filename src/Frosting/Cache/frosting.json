{   
    "imports": [
        "../EventDispatcher/frosting.json"
    ],
    "services": {
        "cache": {
            "class": "Frosting\\Cache\\CacheEngine"
        },
        "cache_category_builder": {
            "class": "Frosting\\Cache\\CategoryBuilder"
        },
        "cache.storage.default": {
            "class": "Frosting\\Cache\\File\\FileStorage"
        },
        "cache.storage.disabled": {
            "class": "Frosting\\Cache\\Disabled\\DisabledStorage"
        },
        "cache.category.system": {
            "class": "Frosting\\Cache\\SystemCategory",
            "builders": ["cache_category_builder"],
            "configuration": {
                "storage": "default",
                "autoClear": false
            }
        },
        "cache.category.default": {
            "class": "Frosting\\Cache\\Category",
            "builders": ["cache_category_factory"],
            "configuration": {
                "storage": "default",
                "autoClear": true
            }
        }
    }
}
